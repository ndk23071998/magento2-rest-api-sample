<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/sample_api/product/:id" method="GET">
        <service class="Osc\SampleApi\Api\ProductRepositoryInterface" method="getById" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/sample_api/setAttribute" method="PUT">
        <service class="Osc\SampleApi\Api\ProductRepositoryInterface" method="setAttribute" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
